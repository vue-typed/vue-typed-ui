{
  "base": {
    "Vue": "vue"
  },
  "methods": {
    "loading": {
      "description": "Set loading state of the button.",
      "type": "JQuery",
      "params": {
        "state": {
          "type": "boolean",
          "description": "State of loading (true | false)"
        }
      }
    },
    "target": {
      "type": "JQuery",
      "description": "Target element"
    }
  },
  "props": {
    "icon": {
      "type": "string",
      "description": "Button icon"
    },
    "icon-pos": {
      "type": "'left' | 'right'",
      "description": "Button icon position"
    },
    "animation": {
      "type": "string",
      "description": "Semantic UI animation"
    },
    "disabled": {
      "type": "'true' | 'false' | boolean",
      "description": "Set button disable"
    },
    "size": {
      "type": "'mini' | 'tiny' | 'small' | 'medium' | 'large' | 'big' | 'huge' | 'massive'",
      "description": "Button size"
    },
    "float": {
      "type": "'left' | 'right'",
      "description": "A button can be aligned to the left or right of its container"
    },
    "color": {
      "type": "string",
      "description": "Button color name"
    },
    "type": {
      "type": "string",
      "description": "Button type",
      "default": "'button'"
    },
    "to": {
      "type": "string | Object",
      "description": "Target URL when button clicked. If you are using vue-router then this attribute represents `to` attribute of `router-link` tag."
    },
    "preventRouter": {
      "type": "boolean",
      "description": "If set to `true` then `to` attribute will always represents `href` attribute of `a` tag."
    }
  },
  "events": {
    "click": {
      "description": "Callback when button clicked"
    }
  }
}